<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mall.repository.basic.mapper.RoleMapper">

    <resultMap id="userRoleMap" type="com.mall.entity.basic.Role">
        <result column="id" property="id" />
        <result column="roleId" property="code" />
        <result column="id" property="name" />
    </resultMap>

    <select id="getRole" resultMap="userRoleMap">
        select
            r1.id as id,
            r1.code as code,
            r1.name as name
        from mall_role r1
        inner join mall_user_role r2 on (r1.id = r2.role_id)
        where r2.user_id = #{userId} and r1.status = #{status}
    </select>

</mapper>
